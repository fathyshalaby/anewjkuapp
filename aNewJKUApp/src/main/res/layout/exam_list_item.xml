<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/exam_list_item_toolbar"
        style="@style/cardToolbarStyle"
        android:theme="?attr/cardToolbarTheme">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/exam_list_item_title"
                style="@style/Text.ItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minLines="2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Title"/>


            <TextView
                android:id="@+id/exam_list_item_time"
                style="@style/Text.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_title"
                tools:text="08:00 - 10:00"/>

            <TextView
                android:id="@+id/exam_list_item_location"
                style="@style/Text.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_time"
                tools:text="HS 19"/>

            <TextView
                android:id="@+id/exam_list_item_courseId"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                android:layout_marginRight="@dimen/separator_top_bottom_margin"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_location"
                tools:text="133337"/>

            <TextView
                android:id="@+id/exam_list_item_term"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                android:layout_marginRight="@dimen/separator_top_bottom_margin"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintLeft_toRightOf="@id/exam_list_item_courseId"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_location"
                tools:text="2014S"/>

            <TextView
                android:id="@+id/exam_list_item_cid"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@id/exam_list_item_term"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_location"
                tools:text="[521]"/>

            <TextView
                android:id="@+id/exam_list_item_info"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_courseId"
                tools:text="Info"/>

            <TextView
                android:id="@+id/exam_list_item_description"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_list_item_info"
                tools:text="Description"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
</android.support.v7.widget.CardView>